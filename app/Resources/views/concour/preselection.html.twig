{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel">
        <div class="panel-body">
            <h3 class="title-hero">
                Elements
            </h3>

            <div class="example-box-wrapper">
                {{ form_start(form,{'attr':{'class':'form-horizontal bordered-row'}}) }}
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Pourcentage</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                {{ form_widget(form.pourcentage,{'attr':{
                                    'class':'form-control'
                                    ,'max':'100','min':'1'
                                }}) }}

                                <span class="input-group-addon bg-green">
                                       %
                                    </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Minimum Experiences</label>
                        <div class="col-sm-6">
                            <div class="input-group">
                                {{ form_widget(form.nbrMois,{'attr':{
                                    'class':'form-control',
                                    'placeholder':"mois"
                                    ,'min':'0'
                                }}) }}
                            </div>
                            <div class="input-group">
                                {{ form_widget(form.nbrAnnee,{'attr':{
                                    'class':'form-control',
                                    'placeholder':"Année"
                                    ,'min':'0'
                                }}) }}
                            </div>
                        </div>
                    </div>
                    <div class="bg-default content-box text-center pad20A mrg25T">
                        <button class="btn btn-lg btn-primary">Poursuivre la sélection</button>
                    </div>
               {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
