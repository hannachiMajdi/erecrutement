{% extends 'base.html.twig' %}

{% block body %}
    <div class="panel">
        <div class="panel-body">
            <h6 class="title-hero">Remplir votre cv pour continuer</h6>
            <div class="divider"></div>
            <div class="example-box-wrapper">
                {{ form_start(form,{'attr':{'class':'form-horizontal bordered-row'}}) }}
                        <h5 class="title-hero">expeiences</h5>
                        <ul class="experiences" data-prototype="{{ form_widget(form.experiences.vars.prototype)|e('html_attr') }}"
                            style="list-style: none;">
                            {% for exform in form.experiences %}
                                <li>
                                    <div class="content-box">
                                        <div class="content-box-wrapper">
                                            {{ form_widget(exform) }}
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Specialités: <span class="tx-danger">*</span></label>
                            <div class="col-sm-6">
                                {{ form_widget(form.specialites,{'attr':{'class':'form-control chosen-select '}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Documents nécessaires: <span class="tx-danger">*</span></label>
                            <div class="col-sm-6">
                                {{ form_widget(form.documentsnecessaires,{'attr':{'class':'form-control '}}) }}
                            </div>
                        </div>
                <div class="bg-default content-box text-center pad20A mrg25T">
                    <button class="btn btn-lg btn-primary" name="postuler">S'inscrire</button>
                </div>
            </div>
            {{ form_end(form) }}


