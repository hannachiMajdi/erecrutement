{% extends 'base.html.twig' %}
{% block pagetitle %}Création d'un membre Personnel{% endblock %}
{% block body %}
    <div class="panel">
        {% if errors|length > 0  %}
            <div class="alert alert-danger">
                <div class="bg-red alert-icon">
                    <i class="glyph-icon icon-times"></i>
                </div>

                <div class="alert-content">
                    <h4 class="alert-title">Personnel Non enregistré</h4>
                    <ul>
                        {% for error in errors %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
        <div class="panel-body">
            <h6 class="title-hero">Création d'un membre Personnel</h6>
            <div class="example-box-wrapper">
                {{ form_start(form,{'attr':{'class':'form-horizontal bordered-row'}}) }}
                <div class="form-group">
                    <label class="col-sm-3 control-label">Matricule: <span class="tx-danger">*</span></label>
                    <div class="col-sm-6">
                        {{ form_widget(form.matricule,{'attr':{'class':'form-control '}}) }}
                        <span class="text-danger">{{ form_errors(form.matricule) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Email: <span class="tx-danger">*</span></label>
                    <div class="col-sm-6">
                        {{ form_widget(form.email,{'attr':{'class':'form-control '}}) }}
                        <span class="text-danger">{{ form_errors(form.email) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label">Mot de passe: <span class="tx-danger">*</span></label>
                    <div class="col-sm-6">
                        {{ form_widget(form.plainPassword,{'attr':{'class':'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.plainPassword) }}</span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-3 control-label">Role: <span class="tx-danger">*</span></label>
                    <div class="col-sm-6">
                        {{ form_widget(form.roles,{'attr':{'class':'form-control chosen-select'}}) }}
                        <span class="text-danger">{{ form_errors(form.roles) }}</span>
                    </div>
                </div>




                <div class="bg-default content-box text-center pad20A mrg25T">
                    <button class="btn btn-lg btn-primary">Enregistrer</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/widgets/chosen/chosen.js') }}"></script>
    <script type="text/javascript" src="{{ asset('assets/widgets/chosen/chosen-demo.js') }}"></script>
{% endblock %}